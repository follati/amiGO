colorFondo = #181A1D
colorHeader = #4B542C
colorLetraHeader = #eaeaea
colorLetra  = #788352
color2 = #433634
color3 = #252C37	

a
    color white
    text-decoration none
    cursor auto;
    &:hover
        color: #009fff;
aside
	border 0.12em solid white
	width 22%

aside, section
	
	display inline-block
	margin 0.5em
	padding 0.25em
	vertical-align: top

body
	background colorFondo
	color colorLetra
	font-size 18px
	height: 100%;
footer
	font-size 0.6em
	background colorHeader
	color white
	text-align center
	width 100%
	position: fixed;
	bottom: 0px;
	


header
	background colorHeader
	color colorLetraHeader
	Margin 0 0 0 0em
	Padding 0
	display inline-block
	border-radius 0em 0em 0.5em 0.5em
	width 100%
	height 3em
	vertical-align: middle
	.header1
		Padding 0
		display inline-block
		vertical-align: top
		height 100%
		width auto
		h3
		img
			vertical-align: bottom
			Padding 0
			margin 0
			width auto
			display inline-block
		img
			height 100%
			
	.header3
	.header2
		display inline-block
		vertical-align: bottom
		float right
		margin 1% 2%
		width  auto
		input
			color black
		
		
		
nav
	background color3
	border-radius 0.75em
	margin 0.5em
	padding 0.3em 0em  0.3em 0.3em
	width 97%
	ul	
		text-align center
		list-style none
		margin 0 
		padding 0px

		li
			background color2
			border-radius 0.5em
			margin 0.1em 0.3em
			padding 0.2em 0.8em
			border 1px solid #CCCCCC
			display inline-block
			vertical-align: top
			&:hover
				background #826865
				border 1px solid #009fff
				
	input
  		border: solid 2px #707070;
 		box-shadow: 0 0 5px 1px #969696;
		transition: box-shadow 0.3s, border 0.3s;
		
	input:focus
		border: solid 2px #707070;
  		box-shadow: 0 0 5px 1px #969696;
	#mostrarMenu
		display none
section
	margin 0.5em
	padding 0.25em
	width 70%
	
#menuM	
	display none
	float: top;
	left: 0
	background color3
	border-radius 0.75em
	margin 0.5em
	padding 0.3em 0em  0.3em 1.5em
	width 90%
	
	overflow hidden
	
	ul	
		list-style none
		
		

		li
			background color2
			border-radius 0.5em
			margin 0.4em
			padding 0.2em 0.8em
			border 1px solid #CCCCCC
			display block
			vertical-align: top
			&:hover
				background #826865
				border 1px solid #009fff
#intUsuario
	
	width 20%
	padding 0
	border 2px solid
	border-radius 0.5em
	article
		border 2px solid
		border-radius 0
		margin 0.5em
#espacio
	padding 0.5em
	width 70%
	
#intUsuario
#espacio
	display inline-block
	

	margin 0.5em
	
	

@media (max-width: 759px) {
	
	#menu{
		display none
	}
	#menuM{
		display none

	}
	#mostrarMenu{
		display block

	}
	#busqueda{
		display none
	}
	
	nav{
		display:inline-block;
		width auto
	
		
	}

}