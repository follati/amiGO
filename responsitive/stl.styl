colorFondo = #ffff
colorHeader = #1E5773
colorLetraHeader = #eaeaea
colorLetra  = #788352
color2 = #826865
color3 = #252C37	

a
    color white
    text-decoration none
    cursor auto;
    &:hover
        color: #009fff;
aside
	border 0.12em solid white
	width 22%

aside, section
	
	display inline-block
	margin 0.5em
	padding 0.25em
	vertical-align: top

body
	background colorFondo
	color colorLetra
	font-size 18px
	height: 100%;
	
footer
	font-size 0.6em
	background colorHeader
	color white
	text-align center
	width 100%
	position: absolute;
    left: 0;
    bottom: 0;
    height: 2.5em;
    margin 2em 0 0 0 
	
	


header
	background colorHeader
	color colorLetraHeader
	Margin 0 0 0 0em
	Padding 0 0 2em
	display inline-block
	border-radius 0
	width 100%
	height auto
	vertical-align: middle
	.header1
		Padding 0
		display inline-block
		vertical-align: top
		height 100%
		width auto
		h3
		img
			vertical-align: bottom
			Padding 0
			margin 0
			width auto
			display inline-block
		img
			height 100%
			height 4em
			
	.header3
	.header2
		display inline-block
		vertical-align: bottom
		float right
		margin 1% 2%
		width  auto
		input
			color black
html {
    position: relative;
    min-height: 100%;
}
nav
	background-color: rgba(113, 113, 118, 0.8);
	border-radius 0.1em
	box-shadow 0 0 5px 1px #969696
	margin 1.5em 0
	opacity 1
	padding 0 0 0 0.3em
	transition box-shadow 0.3s
	ul	
		text-align right
		list-style none
		margin 0 
		padding 0px

		li
			background color2
			border-radius 0.2em
			margin 0
			padding 0.2em 0.8em
			border 0
			display inline-block
			vertical-align: top
			transition: all 1s ease;
			&:hover
				background #826865
				border 1px solid #009fff
				transition: all 0s;
	input
  		border: solid 2px #707070;
 		box-shadow: 0 0 5px 1px #969696;
		
	input:focus
		border: solid 2px #707070;
  		box-shadow: 0 0 5px 1px #969696;
	#mostrarMenu
		display none
section
	margin 0.5em
	padding 0.25em
	width 70%
	
#menuM	
	display none

	background color3
	border-radius 0.75em
	margin 0.5em
	padding 0.3em 0em  0.3em 1.5em
	width 90%
	
	overflow hidden
	
	ul	
		list-style none
		
		

		li
			background color2
			border-radius 0.5em
			margin 0.4em
			padding 0.2em 0.8em
			border 1px solid #CCCCCC
			display block
			vertical-align: top
			&:hover
				background #826865
				border 1px solid #009fff
#intUsuario
	
	width 20%
	padding 0
	border 2px solid
	border-radius 0.5em
	article
		border 2px solid
		border-radius 0
		margin 0.5em
#espacio
	padding 0.5em
	width 70%
	
#intUsuario
#espacio
	display inline-block
	

	margin 0.5em
	
	

@media screen and (max-width: 759px) {
	
	#menu{
		display none		
		text-align center
		margin 2em
	}
	#menu li{
		display block
		width 30%
		text-align center
	
		border-radius 0.3em
	
		margin  0.3em 32%
	}
	
	#mostrarMenu{
		display block
		border 2px solid #fff
		font-size 2em
		margin 0 0 -0.25em
	}
	#busqueda{
		display none
	}
	
	nav{
		display:block
		width auto
		height initial
		text-align center
		padding 0 0 0.5em
	}

}